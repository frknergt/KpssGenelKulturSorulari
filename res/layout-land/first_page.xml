<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="NestedWeights" android:background="@drawable/green">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="30dp"
        android:layout_weight="4"
        android:orientation="vertical"
        tools:ignore="UselessParent,InefficientWeight" >

        <TextView
            android:id="@+id/baslik"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:text="@string/baslik"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#100808"
            android:textSize="30sp" />

        <Button
            android:id="@+id/genel_kultur_cikmis_sorular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="@string/genel_kultur_cikmis_sorular"
            android:textColor="#100808"
            android:textSize="25sp" />

        <Button
            android:id="@+id/genel_kultur_sorular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="3"
            android:text="@string/genel_kultur_sorular"
            android:textColor="#100808"
            android:textSize="25sp" />

        <Button
            android:id="@+id/cikis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_weight="1"
            android:text="@string/cikis"
            android:textColor="#100808"
            android:textSize="25sp" />

    </LinearLayout>

</LinearLayout>